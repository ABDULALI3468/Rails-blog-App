<h1>Here is a list of USERS</h1>

<div class="users">
  <% @users.each do |user| %>
    <%= link_to("/users/#{user.id}") do%>
      <div class="container">
        <img class="user_photo" src="<%= user.photo %>" alt="">
        <div class="user_container">
          <h1 class="user_name"><%= user.name %></h1>
          <p class="user_posts">Number of posts: <%= user.posts.count %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
